<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1A1A1A"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Quest Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="⚔️"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/questTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morning Walk"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/questDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Walk 1 mile"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:alpha="0.7" />
            </LinearLayout>

            <ImageView
                android:id="@+id/completedIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/checkbox_on_background"
                app:tint="#4CAF50"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/questProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressTint="#FF6B35"
                android:progressBackgroundTint="#333333" />

            <TextView
                android:id="@+id/questProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="0/1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:alpha="0.7" />
        </LinearLayout>

        <!-- Rewards -->
        <TextView
            android:id="@+id/questReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="+50 XP • +5 AGL"
            android:textColor="#FF6B35"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Complete Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/completeQuestBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/orange_bg"
            android:text="Mark Complete"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>